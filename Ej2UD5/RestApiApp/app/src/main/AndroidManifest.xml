<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--
        Aquí añadimos los permisos de INTERNET y ACCESS_NETWORK_STATE para poder usar las funciones
        de red del dispositivo móvil
        -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="EJ2UD4"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EjemploBaseDatos"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".NuevoLibro"
            android:exported="false" />
        <activity
            android:name=".NuevoAlumno"
            android:exported="false" />
        <activity
            android:name=".ModificarLibro"
            android:exported="false" />
        <activity
            android:name=".ModificarAlumno"
            android:exported="false" />
        <activity
            android:name=".AlumnoActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>