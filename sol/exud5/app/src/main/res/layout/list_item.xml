<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_li_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="CumpleaÃ±os" />

    <ImageButton
        android:id="@+id/bt_li_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/eliminar_azul"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/bt_li_update"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/editar_azul"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_toLeftOf="@id/bt_li_delete"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_li_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_li_nombre"
        />

    <TextView
        android:id="@+id/tv_li_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05-03-1985"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_li_nombre"
        />

</RelativeLayout>